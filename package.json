{
  "name": "react-zero-ui-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@10.12.1",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "test": "pnpm -r test",
    "prepack:core": "pnpm -F @austinserb/react-zero-ui pack --pack-destination ./dist",
    "prepack:cli": "pnpm -F create-zero-ui pack --pack-destination ./dist",
    "i-tarball": "node scripts/install-local-tarball.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "eslint": "^9.0.0",
    "@eslint/js": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "release-please": "^17.0.0"
  }
}