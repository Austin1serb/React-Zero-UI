{
  "name": "@austinserb/react-zero-ui",
  "version": "1.0.0",
  "description": "Zero-config UI state management with PostCSS plugin for React",
  "main": "index.js",
  "types": "./index.d.ts",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "default": "./index.js"
    },
    "./postcss": {
      "types": "./postcss/index.d.ts",
      "require": "./postcss/index.js"
    }
  },
  "files": [
    "index.js",
    "index.d.ts",
    "postcss/"
  ],
  "scripts": {
    "test:postcss": "node --test postcss/index.test.js",
    "test": "npm run test:postcss && eslint .",
    "lint": "eslint ."
  },
  "keywords": [
    "react",
    "ui",
    "state",
    "css",
    "postcss",
    "postcss-plugin",
    "zero-config",
    "react-zero-ui",
    "postcss-react-zero-ui"
  ],
  "author": "Austinserb <serbaustin@gmail.com>",
  "license": "MIT",
  "repository": "austin1serb/react-zero-ui",
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "postcss": "^8.4.27",
    "react": ">=16.8.0"
  },
  "dependencies": {
    "@babel/parser": "^7.27.5",
    "@babel/traverse": "^7.27.4",
    "chokidar": "^4.0.3"
  },
  "devDependencies": {
    "eslint": "^8.47.0",
    "postcss": "^8.4.27"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended"
    ]
  }
}