{
	"compilerOptions": {
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"incremental": true,
		"module": "ESNext",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"target": "ES2017",
		"baseUrl": ".",
		"paths": {
			"@zero-ui/attributes": [
				"./.zero-ui/attributes.js"
			]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".next/**/*.d.ts",
		".next/types/**/*.ts",
		".zero-ui/**/*.d.ts",
		"next-env.d.ts"
	],
	"exclude": [
		"node_modules"
	]
}